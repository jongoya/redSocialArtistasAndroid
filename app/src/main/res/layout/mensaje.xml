<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/UsuarioMensaje"
        android:textSize="20dp"
        android:layout_marginLeft="10dp"
        android:layout_centerVertical="true"
        android:textColor="#000000"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/fechaMensaje"
        android:layout_below="@+id/UsuarioMensaje"
        android:layout_marginLeft="30dp"
        android:textColor="#a8a8a8"
        android:textStyle="italic"
        android:textSize="12dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/asuntoMensaje"
        android:textColor="#000000"
        android:layout_toRightOf="@+id/UsuarioMensaje"
        android:layout_centerVertical="true"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp" />

    <ImageView
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:id="@+id/imagenLeido"
        android:layout_below="@+id/UsuarioMensaje"
        android:layout_alignLeft="@+id/UsuarioMensaje"
        android:layout_marginTop="4dp"
        android:src="@drawable/leido"
        android:scaleType="centerCrop"
        android:visibility="invisible" />
</RelativeLayout>
